@import 'nib'

$background-color = #6AA3A4

inputfocus,
selectfocus,
textareafocus,
buttonfocus
    outline none


a, ahover, afocus
    color white


html
    height 100%


body
    padding-top 5%
    background-color $background-color
    transition background-color 0.5s ease
    color white
    font-family 'Droid Sans', sans-serif


.center
    text-align center


.title
    opacity 0.8
    font-size 6em
    line-height 80px
    margin-bottom 40px
    font-family 'Amatic SC', cursive
    font-weight normal


.alert, #password 
    border 1px solid rgba(0, 0, 0, 0.8)
    border-radius 8px
    box-shadow inset 0 1px 3px rgba(0, 0, 0, 0.35), 0 1px 0 rgba(255, 255, 255, 0.25)


.alert 
    margin 20px 10px


#password 
    background-color #e6eef6
    font-weight bold
    font-size 25px
    line-height 30px
    text-align center
    height 50px
    margin-bottom 40px


#result 
    display none


#result #time-sentence 
    font-size 21px
    font-weight 200
    line-height 30px


#result #time 
    font-size 31.5px
    font-weight bold


#checks 
    margin-bottom 60px
    display none


footer 
    position fixed
    bottom 0
    background #303841
    border-top 1px solid #111
    width 100%


footer .btn 
    padding 3px 6px


footer .btn:hover 
    color $background-color

footer .btn:focus
    color $background-color

/* Some special fixes for small devices (iPhone & Co) */
@media only screen and (min-device-width : 320px) and (max-device-width : 480px)
    footer 
        position relative /* unstick the footer*/
        border-bottom 1px solid #111
        margin-top 5px

    .title 
        font-size 5em



.alert h2 
    margin-top 0
    font-family 'Amatic SC', cursive
    font-weight bold


footer p 
    padding 10px 10px 0 10px


#details-toggle 
    cursor pointer
    margin-bottom 20px


#details-toggle .chevron-hide
    display inline


#details-toggle .chevron-show
    display none


#details-toggle.collapsed .chevron-hide
    display none


#details-toggle.collapsed .chevron-show
    display inline


#details .box 
    margin-bottom 40px
    background-color rgba(0, 0, 0, 0.05)
    border-radius 8px
    padding 10px
